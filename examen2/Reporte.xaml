<Window x:Class="examen2.Reporte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:examen2"
        mc:Ignorable="d"
        Title="Reporte" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lbCursos" Content="Cursos en el estado:" HorizontalAlignment="Left" Margin="23,21,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbEstado" HorizontalAlignment="Left" Margin="23,52,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbEstado_SelectionChanged"/>
        <DataGrid x:Name="dgCursos" HorizontalAlignment="Left" Margin="23,92,0,0" VerticalAlignment="Top" Height="119" Width="241"/>
        <Button x:Name="btModificar" Content="Modificar" HorizontalAlignment="Left" Margin="23,229,0,0" VerticalAlignment="Top" Width="75" Click="btModificar_Click"/>
        <Button x:Name="btAlta" Content="Alta" HorizontalAlignment="Left" Margin="158,229,0,0" VerticalAlignment="Top" Width="75" Click="btAlta_Click"/>

    </Grid>
</Window>
